import pygame
import random
import math
import torch
import torch.nn as nn
import torch.nn.functional as F
import torch.optim as optim
import numpy as np
from collections import namedtuple, deque
from enum import Enum

pygame.init()
font = pygame.font.Font('freesansbold.ttf', 20)

# ==========================================
# 1. SETTINGS & CONSTANTS
# ==========================================

# Colors
WHITE = (255, 255, 255)
BLACK = (0, 0, 0)
RED = (200, 0, 0)
GREEN = (0, 255, 0)
BLUE = (0, 100, 255)
GRAY = (128, 128, 128)
BROWN = (139, 69, 19)

# Game Settings
SCREEN_WIDTH = 800
SCREEN_HEIGHT = 400
GROUND_HEIGHT = 50
DINO_WIDTH = 40
DINO_HEIGHT = 50
OBSTACLE_WIDTH = 20
OBSTACLE_HEIGHT = 40
BIRD_HEIGHT = 30
FPS = 60

MAX_MEMORY = 100_000
BATCH_SIZE = 1000
LR = 0.001

# ==========================================
# 2. GAME ENTITIES
# ==========================================

class Dino:
    def __init__(self):
        self.x = 100
        self.y = SCREEN_HEIGHT - GROUND_HEIGHT - DINO_HEIGHT
        self.vel_y = 0
        self.on_ground = True
        self.rect = pygame.Rect(self.x, self.y, DINO_WIDTH, DINO_HEIGHT)

    def jump(self):
        if self.on_ground:
            self.vel_y = -15
            self.on_ground = False

    def duck(self):
        self.rect.height = 25

    def stand(self):
        self.rect.height = DINO_HEIGHT

    def update(self):
        self.vel_y += 0.8  # Gravity
        self.y += self.vel_y

        if self.y >= SCREEN_HEIGHT - GROUND_HEIGHT - DINO_HEIGHT:
            self.y = SCREEN_HEIGHT - GROUND_HEIGHT - DINO_HEIGHT
            self.vel_y = 0
            self.on_ground = True

        self.rect.y = self.y

    def get_state(self):
        return [self.y / SCREEN_HEIGHT, self.vel_y / 20]

class Obstacle:
    def __init__(self, x, is_bird=False):
        self.x = x
        self.y = SCREEN_HEIGHT - GROUND_HEIGHT - OBSTACLE_HEIGHT if not is_bird else random.randint(150, 250)
        self.width = OBSTACLE_WIDTH
        self.height = OBSTACLE_HEIGHT if not is_bird else BIRD_HEIGHT
        self.is_bird = is_bird
        self.speed = 6
        self.rect = pygame.Rect(self.x, self.y, self.width, self.height)

    def update(self, speed_multiplier):
        self.x -= self.speed * speed_multiplier
        self.rect.x = self.x

    def off_screen(self):
        return self.x < -self.width

class DinoGameAI:
    def __init__(self, w=SCREEN_WIDTH, h=SCREEN_HEIGHT):
        self.w = w
        self.h = h
        self.display = pygame.display.set_mode((self.w, self.h))
        pygame.display.set_caption('Chrome Dino AI - Deep Q Learning')
        self.clock = pygame.time.Clock()

        self.reset()

    def reset(self):
        self.dino = Dino()
        self.obstacles = []
        self.score = 0
        self.frame_iteration = 0
        self.episode = 0
        self.speed_multiplier = 1.0
        self.spawn_timer = 0

        return self.get_state()

    def get_state(self):
        """Extract 8 state features for neural network"""
        dino_state = self.dino.get_state()

        # Find nearest obstacle
        nearest_obstacle = None
        min_distance = float('inf')
        for obs in self.obstacles:
            distance = obs.x - self.dino.x
            if distance > 0 and distance < min_distance:
                min_distance = distance
                nearest_obstacle = obs

        # State features
        if nearest_obstacle:
            obstacle_distance = nearest_obstacle.x - self.dino.x
            obstacle_y = nearest_obstacle.y
            is_bird = nearest_obstacle.is_bird
        else:
            obstacle_distance = 500
            obstacle_y = 0
            is_bird = False

        state = [
            obstacle_distance / 400.0,           # Normalized distance
            self.speed_multiplier,               # Game speed
            obstacle_y / self.h,                 # Obstacle Y position
            1 if is_bird else 0,                 # Is bird (needs duck)
            self.dino.y / self.h,                # Dino Y position
            self.dino.vel_y / 20,                # Dino velocity
            1 if obstacle_distance < 150 else 0, # Close danger
            1 if obstacle_distance < 80 else 0   # Very close danger
        ]

        return np.array(state, dtype=float)

    def spawn_obstacle(self):
        """Spawn cactus or bird"""
        if random.random() < 0.7:
            # Cactus (ground)
            self.obstacles.append(Obstacle(self.w))
        else:
            # Bird (flying)
            self.obstacles.append(Obstacle(self.w, is_bird=True))

    def play_step(self, action):
        """Execute action and return reward, game_over, score"""
        self.frame_iteration += 1

        # Handle events
        for event in pygame.event.get():
            if event.type == pygame.QUIT:
                pygame.quit()
                quit()

        # Process action: [0,0,0]=do_nothing, [0,1,0]=jump, [0,0,1]=duck
        if np.argmax(action) == 1:  # Jump
            self.dino.jump()
        elif np.argmax(action) == 2:  # Duck
            self.dino.duck()
        else:
            self.dino.stand()

        # Update game objects
        self.dino.update()

        # Update obstacles
        for obstacle in self.obstacles[:]:
            obstacle.update(self.speed_multiplier)
            if obstacle.off_screen():
                self.obstacles.remove(obstacle)
                self.score += 1

        # Spawn new obstacles
        self.spawn_timer += 1
        if self.spawn_timer > 60 / self.speed_multiplier:
            self.spawn_timer = 0
            self.spawn_obstacle()

        # Increase difficulty over time
        if self.score % 100 == 0 and self.score > 0:
            self.speed_multiplier += 0.1

        # Collision detection
        game_over = False
        reward = 0.1  # Survival reward

        for obstacle in self.obstacles:
            if self.dino.rect.colliderect(obstacle.rect):
                game_over = True
                reward = -10
                break

        if game_over:
            self.episode += 1

        self._update_ui()
        self.clock.tick(FPS)

        return reward, game_over, self.score

    def _update_ui(self):
        self.display.fill((135, 206, 235))  # Sky blue

        # Draw ground
        pygame.draw.rect(self.display, BROWN, (0, self.h - GROUND_HEIGHT, self.w, GROUND_HEIGHT))

        # Draw dino
        pygame.draw.rect(self.display, GREEN, self.dino.rect)

        # Draw obstacles
        for obs in self.obstacles:
            color = RED if obs.is_bird else GRAY
            pygame.draw.rect(self.display, color, obs.rect)

        # Score display
        text = font.render(f"Episode: {self.episode} Score: {self.score} Speed: {self.speed_multiplier:.1f}", True, BLACK)
        self.display.blit(text, [10, 10])

        pygame.display.flip()

# ==========================================
# 3. NEURAL NETWORK & TRAINER (Same as Snake)
# ==========================================

class Linear_QNet(nn.Module):
    def __init__(self, input_size, hidden_size, output_size):
        super().__init__()
        self.linear1 = nn.Linear(input_size, hidden_size)
        self.linear2 = nn.Linear(hidden_size, int(hidden_size / 2))
        self.linear3 = nn.Linear(int(hidden_size / 2), output_size)

    def forward(self, x):
        x = F.relu(self.linear1(x))
        x = F.relu(self.linear2(x))
        x = self.linear3(x)
        return x

    def save(self, file_name='pygame_dino_model.pth'):
        import os
        model_folder_path = './model'
        if not os.path.exists(model_folder_path):
            os.makedirs(model_folder_path)
        file_name = os.path.join(model_folder_path, file_name)
        torch.save(self.state_dict(), file_name)

class QTrainer:
    def __init__(self, model, lr, gamma):
        self.lr = lr
        self.gamma = gamma
        self.model = model
        self.optimizer = optim.Adam(model.parameters(), lr=self.lr)
        self.criterion = nn.MSELoss()

    def train_step(self, state, action, reward, next_state, done):
        state = torch.tensor(state, dtype=torch.float)
        next_state = torch.tensor(next_state, dtype=torch.float)
        action = torch.tensor(action, dtype=torch.long)
        reward = torch.tensor(reward, dtype=torch.float)

        if len(state.shape) == 1:
            # (1, x)
            state = torch.unsqueeze(state, 0)
            next_state = torch.unsqueeze(next_state, 0)
            action = torch.unsqueeze(action, 0)
            reward = torch.unsqueeze(reward, 0)
            done = (done, )

        pred = self.model(state)
        target = pred.clone()

        for idx in range(len(done)):
            Q_new = reward[idx]
            if not done[idx]:
                Q_new = reward[idx] + self.gamma * torch.max(self.model(next_state[idx]))
            target[idx][torch.argmax(action[idx]).item()] = Q_new

        self.optimizer.zero_grad()
        loss = self.criterion(target, pred)
        loss.backward()
        self.optimizer.step()

# ==========================================
# 4. AGENT (Same as Snake)
# ==========================================

class Agent:
    def __init__(self):
        self.n_games = 0
        self.epsilon = 0
        self.gamma = 0.9
        self.memory = deque(maxlen=MAX_MEMORY)

        # 8 state features -> 256 -> 128 -> 3 actions
        self.model = Linear_QNet(8, 256, 3)
        self.trainer = QTrainer(self.model, lr=LR, gamma=self.gamma)

    def remember(self, state, action, reward, next_state, done):
        self.memory.append((state, action, reward, next_state, done))

    def train_long_memory(self):
        if len(self.memory) > BATCH_SIZE:
            mini_sample = random.sample(self.memory, BATCH_SIZE)
        else:
            mini_sample = self.memory
        states, actions, rewards, next_states, dones = zip(*mini_sample)
        self.trainer.train_step(states, actions, rewards, next_states, dones)

    def train_short_memory(self, state, action, reward, next_state, done):
        self.trainer.train_step(state, action, reward, next_state, done)

    def get_action(self, state):
        self.epsilon = 80 - self.n_games
        if self.epsilon < 5:
            self.epsilon = 5

        final_move = [0, 0, 0]
        if random.randint(0, 200) < self.epsilon:
            move = random.randint(0, 2)
            final_move[move] = 1
        else:
            state0 = torch.tensor(state, dtype=torch.float)
            prediction = self.model(state0)
            move = torch.argmax(prediction).item()
            final_move[move] = 1
        return final_move

# ==========================================
# 5. TRAINING LOOP
# ==========================================

def train():
    plot_scores = []
    plot_mean_scores = []
    total_score = 0
    record = 0

    agent = Agent()
    game = DinoGameAI()

    print("ðŸš€ Pygame Dino Game AI Training Started!")
    print("Actions: [0]=Do Nothing, [1]=Jump, [2]=Duck")

    while True:
        state_old = game.get_state()
        final_move = agent.get_action(state_old)

        reward, done, score = game.play_step(final_move)
        state_new = game.get_state()

        agent.train_short_memory(state_old, final_move, reward, state_new, done)
        agent.remember(state_old, final_move, reward, state_new, done)

        if done:
            game.reset()
            agent.n_games += 1

            agent.train_long_memory()

            if score > record:
                record = score
                agent.model.save()

            print(f'Game {agent.n_games} | Score: {score} | Record: {record}')

            plot_scores.append(score)
            total_score += score
            mean_score = total_score / agent.n_games
            plot_mean_scores.append(mean_score)

    pygame.quit()

if __name__ == '__main__':
    train()
